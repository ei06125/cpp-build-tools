#!/bin/bash
#
# An example hook script to prepare a packed repository for use over
# dumb transports.
#
# To enable this hook, rename this file to "post-update".

# Cause the script to exit immediately if a command returns a non-zero exit status (indicating an error)
set -e

git_dir=$(git rev-parse --show-toplevel)
cd $git_dir 1>post-update.log
source $(pwd)/tools/scripts/git/utils/logger.sh
cd - 1> post-update.log
rm post-update.log

log_info "Running post-update hook..."

# exec git update-server-info

# =============================================================================
# Clean up
# =============================================================================

# return to previous cwd
cd - 1> post-update.log
rm post-update.log
